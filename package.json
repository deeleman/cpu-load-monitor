{
  "name": "cpu-load-monitor",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "loadavg-windows": "^1.1.1",
    "node-sass": "^4.14.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  },
  "scripts": {
    "start:server": "node ./server",
    "start": "concurrently \"node ./server\" \"react-scripts start\"",
    "test": "react-scripts test",
    "test:server": "jest ./server/**/*.test.js",
    "test:ci": "yarn test:server && yarn test --watchAll=false --coverage",
    "build": "react-scripts build",
    "build:ci": "yarn build && yarn test:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deeleman/cpu-load-monitor.git"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "javascript",
    "react",
    "css"
  ],
  "author": "Pablo Deeleman <deeleman@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deeleman/cpu-load-monitor/issues"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "resetMocks": false,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/settings.ts",
      "!<rootDir>/src/**/index.{js,jsx,ts,tsx}"
    ]
  },
  "proxy": "http://localhost:8080"
}
